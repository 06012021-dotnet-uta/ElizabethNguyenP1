
@{
    Layout = "~/Views/Hidden/_Layout.cshtml";
    ViewBag.Title = "Hidden Login";
}

<meta name="viewport" content="width=device-width" />
<title>Hidden Admin Login</title>


<h2>Admin Login</h2>
<!--
