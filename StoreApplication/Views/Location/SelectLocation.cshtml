@{
    ViewData["Title"] = "Locations";
}



<h2>Our Locations</h2>

<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Warning!</strong> Changing locations will cause your cart to empty.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="row display: flex ">
    <form asp-controller="Location" asp-action="UpdateLocation">
        <div class="form-group">
            <input type="submit" class="btn btn-warning" name="button" value="Update Location" /> &nbsp;
            <input type="submit" class="btn btn-info" name="button" value="Update Default" /><br /><br />
            @foreach (P0DbContext.Location place in Model)
            {
                <div class="form-check-inline">
                    <input type="radio" value=@place.LocationId name="LocationId" class="form-check-input" required>
                    <label class="location-selection" for="customRadio1">
                        <div class="card text-center border-dark mb-3" style="width: 18rem;">
                            <img class="card">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => place.LocationName)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => place.LocationAddress)</p>
                            </div>
                        </div>
                    </label>

                </div>
            }

        </div>
    </form>
</div>
